<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Box</th>
      <th>Pieces</th>
      <th>Rules</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= image_tag(game.box_photo, size: "160x100") %></td>
        <td>
          <ul>
            <% game.part_photos.each do |photo| %>
              <li><%= image_tag(photo, size: "160x100") %></li>
            <% end %>
          </ul>
        </td>
        <td><%= link_to 'Download', rails_blob_path(game.rule, disposition: "attachment") %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>
